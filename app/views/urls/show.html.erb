<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <div class="card-header">
          <h1 class="h4">URL Shortened</h1>
        </div>
        <div class="card-body">
          <p><strong>Short URL:</strong> <%= link_to shortened_url_url(@url.short_code), shortened_url_url(@url.short_code), target: "_blank" %></p>
          <p><strong>Original URL:</strong> <%= link_to @url.long_url, @url.long_url, target: "_blank" %></p>
          <p><strong>Title:</strong> <%= @url.title %></p>
          <div class="mt-4">
            <%= link_to 'Shorten Another URL', new_url_path, class: "btn btn-primary" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
