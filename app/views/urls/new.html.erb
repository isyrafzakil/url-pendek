<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <div class="card-header">
          <h1 class="h4">Shorten Your URL</h1>
        </div>
        <div class="card-body">
          <%= form_with model: @url, local: true, class: "form-inline" do |form| %>
            <div class="form-group mb-2 w-100">
              <%= form.label :long_url, class: "sr-only" %>
              <%= form.text_field :long_url, class: "form-control w-75 mr-2", placeholder: "Enter your URL" %>
              <%= form.submit "Shorten", class: "btn btn-primary mb-2" %>
            </div>
          <% end %>
          <% if @short %>
            <div class="alert alert-success mt-3">
              <strong>Short URL:</strong> <%= link_to @short, @short, target: "_blank" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
